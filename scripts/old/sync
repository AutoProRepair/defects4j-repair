#!/bin/bash

echo 'Starting synchronization ...'
for site in 'bordeaux' 'grenoble' 'lille' 'luxembourg' 'lyon' 'nancy' 'nantes' 'rennes' 'toulouse' 'grenoble' 'reims' 'sophia'
do
	rsync --delete -az ~/defects4j/ $site.grid5000.fr:~/defects4j/
	echo "> $site defects4j synchronized"
	rsync --delete -az ~/nopol/ $site.grid5000.fr:~/nopol/
	echo "> $site nopol synchronized"
	rsync --delete -az ~/results/ $site.grid5000.fr:~/results/
	echo "> $site results synchronized"
	rsync --delete -az ~/public/ $site.grid5000.fr:~/public/
	echo "> $site public synchronized"
	rsync --delete -az ~/maven/ $site.grid5000.fr:~/maven/
	echo "> $site maven synchronized"
	rsync --delete -az ~/bin/ $site.grid5000.fr:~/bin/
	echo "> $site bin synchronized"
done

echo 'Synchronization done.'
