#!/bin/bash

export PATH="~/defects4j/framework/bin:$PATH"

cp -r ~/projects/closure/closure_${1}/ /tmp/

cd /tmp/closure_${1}/
defects4j compile

cp ~/nopol/nopol-0.0.3-SNAPSHOT-jar-with-dependencies.jar .

time java -cp nopol-0.0.3-SNAPSHOT-jar-with-dependencies.jar fr.inria.lille.repair.Main ranking src/ build/classes/:build/test/:nopol-0.0.3-SNAPSHOT-jar-with-dependencies.jar

cd /tmp/
rm -rf closure_${1}/

cd ~/defects4j-nopol/logs/nopol-ranking/closure/

#Cut log
line=`grep -m 1 -n "^\/\*" stdout/closure_${1}.stdout | cut -f 1 -d :`
tail -n +$line stdout/closure_${1}.stdout > closure_${1}_tmp.stdout
mv closure_${1}_tmp.stdout stdout/closure_${1}.stdout

#Add time at the log end
cat stderr/closure_${1}.stderr | tail -4 >> stdout/closure_${1}.stdout
echo "" >> stdout/closure_${1}.stdout
