#!/bin/bash

for bug in `seq 1 50`
do
  echo "Launching nopol ranking node for closure_${bug} ..."
  oarsub -l walltime=00:30:00 -O ~/defects4j-nopol/logs/nopol-ranking/closure/stdout/closure_${bug}.stdout -E ~/defects4j-nopol/logs/nopol-ranking/closure/stderr/closure_${bug}.stderr "~/defects4j-nopol/scripts/nopol-ranking/closure/closure-node ${bug}"
done

while [ $(oarstat -u | grep rsommerard | wc -l) -gt 0 ]
do
  echo "Closure nopol ranking node running: $(oarstat -u | grep rsommerard | wc -l)"
  sleep 5
done

for bug in `seq 51 100`
do
  echo "Launching nopol ranking node for closure_${bug} ..."
  oarsub -l walltime=00:30:00 -O ~/defects4j-nopol/logs/nopol-ranking/closure/stdout/closure_${bug}.stdout -E ~/defects4j-nopol/logs/nopol-ranking/closure/stderr/closure_${bug}.stderr "~/defects4j-nopol/scripts/nopol-ranking/closure/closure-node ${bug}"
done

while [ $(oarstat -u | grep rsommerard | wc -l) -gt 0 ]
do
  echo "Closure nopol ranking node running: $(oarstat -u | grep rsommerard | wc -l)"
  sleep 5
done

for bug in `seq 101 133`
do
  echo "Launching nopol ranking node for closure_${bug} ..."
  oarsub -l walltime=00:30:00 -O ~/defects4j-nopol/logs/nopol-ranking/closure/stdout/closure_${bug}.stdout -E ~/defects4j-nopol/logs/nopol-ranking/closure/stderr/closure_${bug}.stderr "~/defects4j-nopol/scripts/nopol-ranking/closure/closure-node ${bug}"
done

while [ $(oarstat -u | grep rsommerard | wc -l) -gt 0 ]
do
  echo "Closure nopol ranking node running: $(oarstat -u | grep rsommerard | wc -l)"
  sleep 5
done

echo "Done."
